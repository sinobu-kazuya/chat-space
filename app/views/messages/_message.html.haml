.chatspace__list--message
  .chatspace__list--message-indent
    .chatspace__list--message-indent-name
      = message.user.name
    .chatspace__list--message-indent-time
      = format_posted_time(message.created_at)
    .chatspace__list--message-indent-body
      - if message.content.present?
        = message.content
      = image_tag message.image.url, class: 'chatspace__list--message-indent-body' if message.image.present?
